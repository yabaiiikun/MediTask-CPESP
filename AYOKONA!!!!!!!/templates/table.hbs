<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MediTask</title>
  <style>
    body {
      margin: 0;
      font-family: "Segoe UI", Arial, sans-serif;
      background: linear-gradient(135deg, #e3f2fd, #bbdefb);
      color: #333;
      min-height: 100vh;
    }

    nav {
      backdrop-filter: blur(10px);
      background: rgba(255, 255, 255, 0.5);
      border-bottom: 1px solid rgba(255, 255, 255, 0.3);
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px 40px;
      position: sticky;
      top: 0;
      z-index: 100;
    }

    nav h1 {
      font-size: 26px;
      font-weight: 700;
      color: #0d47a1;
    }

    .nav-buttons {
      display: flex;
      gap: 10px;
    }

    .nav-btn {
      background: rgba(13, 71, 161, 0.1);
      border: 1px solid rgba(13, 71, 161, 0.2);
      color: #0d47a1;
      border-radius: 10px;
      padding: 8px 18px;
      font-size: 14px;
      font-weight: 500;
      cursor: pointer;
      transition: 0.3s;
    }

    .nav-btn:hover, .nav-btn.active {
      background: #0d47a1;
      color: white;
      box-shadow: 0 3px 10px rgba(13, 71, 161, 0.3);
    }

    .data-table {
      width: 95%;
      margin: 40px auto;
      background: rgba(255, 255, 255, 0.95);
      border-radius: 16px;
      padding: 30px;
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
      transition: all 0.3s ease;
    }

    h2 {
      text-align: center;
      color: #006AFF;
      margin-bottom: 25px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background: white;
      border-radius: 10px;
      overflow: hidden;
    }

    th, td {
      padding: 12px 14px;
      border-bottom: 1px solid #eee;
    }

    th {
      background: #4a90e2;
      color: white;
      font-weight: 600;
      text-align: left;
    }

    tr {
      transition: all 0.3s ease;
    }

    tr:hover:not(.details-row) {
      background: #f5f9ff;
    }

    input, textarea {
      width: 100%;
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 6px;
      font-size: 14px;
    }

    button {
      border: none;
      border-radius: 6px;
      padding: 8px 14px;
      cursor: pointer;
      font-size: 14px;
      transition: 0.3s;
    }

    .expandBtn {
      background: #4a90e2;
      color: white;
    }

    .expandBtn:hover {
      background: #357abd;
    }

    .deleteBtn {
      background: #e74c3c;
      color: white;
    }

    .deleteBtn:hover {
      background: #c0392b;
    }

    .add-row-btn {
      display: block;
      margin: 25px auto;
      padding: 12px 24px;
      background: #27ae60;
      border-radius: 8px;
      color: white;
      font-size: 15px;
      transition: 0.3s;
    }

    .add-row-btn:hover {
      background: #219150;
    }

    .details-row td {
      background: #eef4fb;
      padding: 0;
    }

    .profile-container {
      display: flex;
      align-items: flex-start;
      gap: 20px;
      padding: 20px;
    }

    .profile-photo {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 10px;
    }

    .profile-img {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      object-fit: cover;
      border: 3px solid #0d47a1;
      box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    }

    .change-photo-btn {
      background: #43a047;
      color: white;
    }

    .change-photo-btn:hover {
      background: #2e7d32;
    }

    .edit-btn {
      background: #4a90e2;
      color: white;
      margin-top: 10px;
    }

    .edit-btn:hover {
      background: #357abd;
    }

    /* ✨ Smooth transition for Details */
    .details-row {
      transition: all 0.4s ease;
    }

    .details-content {
      max-height: 0;
      overflow: hidden;
      opacity: 0;
      transform: translateY(-10px);
      transition: max-height 0.4s ease, opacity 0.4s ease, transform 0.4s ease;
    }

    .details-row.show .details-content {
      max-height: 500px;
      opacity: 1;
      transform: translateY(0);
    }

    /* ✨ Animation when adding a row (slide down) */
    .new-row {
      animation: fadeSlideDown 0.4s ease forwards;
    }

    @keyframes fadeSlideDown {
      from {
        opacity: 0;
        transform: translateY(-15px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* ✨ Animation when deleting a row */
    .fade-out {
      animation: fadeSlideOut 0.4s ease forwards;
    }

    @keyframes fadeSlideOut {
      from {
        opacity: 1;
        transform: translateY(0);
      }
      to {
        opacity: 0;
        transform: translateY(-15px);
      }
    }
  </style>
</head>
<body>

  <nav>
    <h1>MediTask</h1>
    <div class="nav-buttons">
      <button class="nav-btn" onclick="location.href='/day'">Appointment</button>
      <button class="nav-btn active" onclick="location.href='/table'">Patients</button>
      <button class="nav-btn" onclick="location.href='/home'">Profile</button>
      <button class="nav-btn" onclick="location.href='/login'">Logout</button>
    </div>
  </nav>

  <div class="data-table">
    <h2>Patient Information</h2>
    <table id="dataTable">
      <thead>
        <tr>
          <th>Patient Name</th>
          <th>Age</th>
          <th>Address</th>
          <th>Phone Number</th>
          <th>Last Visit</th>
          <th>Next Appointment</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><input type="text" placeholder="Enter Name"></td>
          <td><input type="number" placeholder="Enter Age"></td>
          <td><input type="text" placeholder="Enter Address"></td>
          <td><input type="number" placeholder="Enter Phone Number"></td>
          <td><input type="date"></td>
          <td><input type="date"></td>
          <td>
            <button class="expandBtn">Details</button>
            <button class="deleteBtn">Delete</button>
          </td>
        </tr>
        <tr class="details-row hidden">
          <td colspan="7">
            <div class="details-content">
              <div class="profile-container">
                <div class="profile-photo">
                  <img src="https://via.placeholder.com/100" class="profile-img" alt="Profile Picture">
                  <input type="file" class="upload-input" accept="image/*" hidden>
                  <button class="change-photo-btn">Change Photo</button>
                </div>
                <div class="profile-details">
                  <label>Condition</label>
                  <input type="text" disabled>
                  <label>Medications</label>
                  <input type="text" disabled>
                  <label>Notes</label>
                  <textarea rows="4" disabled></textarea>
                  <button class="edit-btn toggle-edit-btn">Edit Details</button>
                </div>
              </div>
            </div>
          </td>
        </tr>
      </tbody>
    </table>

    <button class="add-row-btn" id="addRowBtn">+ Add Patient</button>
  </div>

  <script>
    const tableBody = document.querySelector("#dataTable tbody");
    const addRowBtn = document.getElementById("addRowBtn");

    function createRow() {
      const mainRow = document.createElement("tr");
      mainRow.classList.add("new-row");
      mainRow.innerHTML = `
        <td><input type="text" placeholder="Enter Name"></td>
        <td><input type="number" placeholder="Enter Age"></td>
        <td><input type="text" placeholder="Enter Address"></td>
        <td><input type="number" placeholder="Enter Phone Number"></td>
        <td><input type="date"></td>
        <td><input type="date"></td>
        <td>
          <button class="expandBtn">Details</button>
          <button class="deleteBtn">Delete</button>
        </td>
      `;

      const detailsRow = document.createElement("tr");
      detailsRow.classList.add("details-row", "hidden");
      detailsRow.innerHTML = `
        <td colspan="7">
          <div class="details-content">
            <div class="profile-container">
              <div class="profile-photo">
                <img src="https://via.placeholder.com/100" class="profile-img" alt="Profile Picture">
                <input type="file" class="upload-input" accept="image/*" hidden>
                <button class="change-photo-btn">Change Photo</button>
              </div>
              <div class="profile-details">
                <label>Condition</label>
                <input type="text" disabled>
                <label>Medications</label>
                <input type="text" disabled>
                <label>Notes</label>
                <textarea rows="4" disabled></textarea>
                <button class="edit-btn toggle-edit-btn">Edit Details</button>
              </div>
            </div>
          </div>
        </td>
      `;

      setupRow(mainRow, detailsRow);
      tableBody.appendChild(mainRow);
      tableBody.appendChild(detailsRow);
    }

    function setupRow(mainRow, detailsRow) {
      const expandBtn = mainRow.querySelector(".expandBtn");
      const deleteBtn = mainRow.querySelector(".deleteBtn");
      const editBtn = detailsRow.querySelector(".toggle-edit-btn");
      const inputs = detailsRow.querySelectorAll(".profile-details input");
      const textarea = detailsRow.querySelector(".profile-details textarea");
      const uploadInput = detailsRow.querySelector(".upload-input");
      const profileImg = detailsRow.querySelector(".profile-img");
      const changePhotoBtn = detailsRow.querySelector(".change-photo-btn");

      expandBtn.addEventListener("click", () => {
        detailsRow.classList.toggle("show");
        expandBtn.textContent = detailsRow.classList.contains("show") ? "Hide" : "Details";
      });

      deleteBtn.addEventListener("click", () => {
        mainRow.classList.add("fade-out");
        detailsRow.classList.add("fade-out");
        setTimeout(() => {
          mainRow.remove();
          detailsRow.remove();
        }, 400); // match animation duration
      });

      editBtn.addEventListener("click", () => {
        const editing = editBtn.textContent === "Edit Details";
        inputs.forEach(input => input.disabled = !editing);
        textarea.disabled = !editing;
        editBtn.textContent = editing ? "Save" : "Edit Details";
      });

      changePhotoBtn.addEventListener("click", () => uploadInput.click());

      uploadInput.addEventListener("change", () => {
        const file = uploadInput.files[0];
        if (file) {
          const reader = new FileReader();
          reader.onload = e => profileImg.src = e.target.result;
          reader.readAsDataURL(file);
        }
      });
    }

    setupRow(document.querySelector("#dataTable tbody tr"), document.querySelector(".details-row"));
    addRowBtn.addEventListener("click", createRow);
  </script>
</body>
</html>
